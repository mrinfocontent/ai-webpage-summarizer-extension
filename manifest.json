{
  "manifest_version": 3,
  "name": "AI Webpage Summarizer",
  "version": "1.0",
  "description": "Summarize the current webpage and ask questions using your OpenAI API key.",

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "https://api.openai.com/*"
  ],

  "options_page": "options.html",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  }
}
