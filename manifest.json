{
  "manifest_version": 3,
  "name": "AI Webpage Summarizer",
  "version": "2.2",
  "description": "Summarize webpages using Groq (free), OpenAI, or Google Gemini.",

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "https://api.groq.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "options_page": "options.html",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
